extends layout.pug
block content
  div.index
    h1
      span
        img(src="/images/lock.png" alt="->" style="height:25px; width:25px; margin-right:10px;")
      span Authentication System
    div.index_forms
      form(method="GET" action="/userlogin")
        div.form-group
          button.btn
            img(src="/images/login.png" alt="->" style="height:100px; width:100px;")
            p Login
      span(style="color:#ccc;") OR
      form(method="GET" action="/userReg")
        div.form-group
          button.btn
            img(src="/images/register.png" alt="->" style="height:100px; width:100px;")
            p Register
